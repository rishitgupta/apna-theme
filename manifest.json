{
    "name": "Apna Theme",
    "description": "Build your own theme for Chrome!",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/1.png",
            "32": "images/2.png",
            "64": "images/3.png",
            "128": "images/4.png"
        }
    },
    "icons": {
        "16": "images/1.png",
        "32": "images/2.png",
        "64": "images/3.png",
        "128": "images/4.png"
    }
}