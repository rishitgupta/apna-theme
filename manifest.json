{
    "name": "Apna Theme",
    "description": "Build your own theme for Chrome!",
    "version": "1.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "bookmarks", "tabs", "downloads"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "64": "images/64.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "64": "images/64.png",
        "128": "images/128.png"
    }
}